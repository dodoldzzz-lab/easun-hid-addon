{
  "name": "EASUN HID Reader",
  "version": "0.1.0",
  "slug": "easun_hid",
  "description": "Reads data from EASUN HID via USB and sends to MQTT",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "privileged": true,
  "devices": ["/dev/hidraw0"],
  "map": ["config:/config"],
  "options": {
    "mqtt_host": "localhost",
    "mqtt_port": 1883,
    "mqtt_user": "dodold",
    "mqtt_password": "Lubos12421+",
    "inverters": [
      {
        "name": "easun_smiv",
        "device": "/dev/hidraw0",
        "mqtt_prefix": "easun1"
      }
    ]
  },
  "schema": {
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_password": "str",
    "inverters": [
      {
        "name": "str",
        "device": "str",
        "mqtt_prefix": "str"
      }
    ]
  }
}
